<% provide(:title, 'Inscription') %>
<h1>Modification du profil</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: user_path) do |f| %>

    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
      <%= f.text_field :name, class: 'form-control', placeholder: "Pseudo" %>
    </div>
    <br>
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
      <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
    </div>
    <br>
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
      <%= f.password_field :password, class: 'form-control', placeholder: "Mot de passe" %>
    </div>
    <br>
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirmation" %>
    </div>
    <br>
    <div class='center'>
      <%= f.submit "Modifier", class: "btn btn-primary" %>
      <% end %>
    </div>
    <br>
    <% if current_user == @user %>
    <%= form_for @user, method: :delete do |f| %>
    <br>
    <div class="center"><%= f.submit "Supprimer le compte", class: "btn btn-danger", data: {confirm: 'Etes vous sur?' } %></div>
    <% end %>
    <% end %>